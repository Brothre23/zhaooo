        crossorigin="anonymous">

    <style>
        .bd-placeholder-img {
            font-size: 1.125rem;
            text-anchor: middle;
        }
        
        @media (min-width: 768px) {
            .bd-placeholder-img-lg {
            font-size: 3.5rem;
            }
        }
    </style>

    <link rel="stylesheet" href="/static/css/register.css">
    <title>歡迎來到 zhaooo！</title>


</head>

<body>
    <form class="form-signin">
        <img class="mb-4" src="/static/media/img/logo.svg" alt="" width="72" height="72" style="display:block; margin:auto;">
        <h1 class="h3 mb-3 font-weight-normal" align="center">註冊</h1>
        <input type="text" id="inputID" class="form-control" placeholder="學號" required autofocus>
        <input type="email" id="inputEmail" class="form-control" placeholder="信箱地址">
        <input type="password" id="inputPassword" class="form-control" placeholder="密碼" required>
        <p align="center" style="color: gray; font-size: 90%">點擊註冊即代表您同意<a href="#" style="color: gray">隱私政策與使用條款</a></p>
        <button class="btn btn-lg btn-primary btn-block" type="submit">註冊</button>

        <p align="center">已經有帳號？<a href="/login"> 點我登入</a></p>
    </form>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
